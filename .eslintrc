{
  "extends": "eslint-config-airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "classes": true,
    "jsx": true
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "indent": [2, 2],
    "import/named": 2,
    "comma-dangle": 0,
    "no-console": 0,
    "no-alert": 0
  },
  "plugins": [
    "babel",
    "import"
  ],
  "settings": {
    "import/resolver": "node"
  }
}